#ifndef _AUDIO_ALGO_DEBUGGER_H__
#define _AUDIO_ALGO_DEBUGGER_H__

#include "basic_op.h"
#include <stdio.h>
#include <stdlib.h>

typedef struct _Debugger {
	uint16_t	fftlen;
	/* DOA */
	uiv_f32_t 	theta;
	/* Cepstrum VAD */
	uint8_t		cep_vad;
	uint16_t	cep_pitch;
	/* SpecFlat VAD */
	uint8_t		spf_vad;
	/* VAD */
	uint8_t		final_vad;
	/* Noise Reduce */
	uint8_t		speech_frame;
	uint8_t		noise_frame;
	float*	spp;
	float*	Npw;
	/* Auto Gain Ctrl */
	float	pka_fp;
	float	last_g_fp;

	uint8_t		noise_status;
	uint8_t		speech_status;
	uint8_t		bHit[256];
	float*	ref_pow;
	float*	beamformed_pow;

} Debugger;

int32_t Debugger_Init(Debugger* hDebugger, uint16_t fftlen);
void Debugger_CopyValue(void* pSrc, void* pDst, uint32_t size);
int32_t Debugger_Release(Debugger* hDebugger);
#endif //_AUDIO_ALGO_DEBUGGER_H__
